<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.isen.dourville.androiderestaurant">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidERestaurant"
        android:usesCleartextTraffic="true">
        <activity android:name=".BaseActivity"></activity>
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.AndroidERestaurant.NoActionBar" />
        <activity
            android:name=".cart.CartActivity"
            android:label="@string/title_activity_cart"
            android:theme="@style/Theme.AndroidERestaurant.NoActionBar" />
        <activity android:name=".detail.DetailActivity" />
        <activity android:name=".DishActivity" />
        <activity
            android:name=".EntreeActivity"
            android:label="@string/title_activity_entree"
            android:theme="@style/Theme.AndroidERestaurant.NoActionBar" />
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>